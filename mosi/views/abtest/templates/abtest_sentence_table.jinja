<div class='table-responsive'>
    <table class='table'>
        <thead>
            <th>
                Auðkenni texta
            </th>
            <th>
                Texti
            </th>
            <th>
                Fjöldi hljóðklippa
            </th>
            <th>
                Inniheldur samanburðarklippu(ABX)
            </th>
        </thead>
        <tbody>
            {% for key, value in sentence_groups.items() %}
                <tr class="abtest-table-line" data-toggle='modal', data-target='#sentenceGroupModal-{{key}}'>
                    <td>
                        {{key}}
                    </td>
                    <td>{{value['info']['text']}}</td>
                    <td>{{value['instances'] | length}}</td>
                    <td>
                        {% if value['info']['has_reference'] == 1%} Já {% else %} Nei {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<script src='{{url_for("main.static", filename="js/listControls.js")}}'></script>

