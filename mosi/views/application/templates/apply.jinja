        <div class='col-xl-6 offset-xl-3 col-md-8 offset-md-2 col-12'>
            <div class='card card-body'>
                <h2>{{posting.name}}</h2>
                <p>{{posting.ad_text}}</p>
            </div>
        </div>
    </div>
    <div class='row'>
        <div class='col-xl-6 offset-xl-3 col-md-8 offset-md-2 col-12'>
            <div class='card card-body'>
                <form method="POST" action="{{action}}">
                    {% include 'forms/_form.jinja' %}
                    <button type='submit' class='btn btn-success float-right'>
