{% block scripts %}
    {{super()}}
    <script>
        var isChrome = /Chrome/.test(navigator.userAgent) && /Google Inc/.test(navigator.vendor);
        var secondTry = /not-in-chrome/.test(document.referrer);
        if (!isChrome && !secondTry) {
            window.location = "{{url_for('main.not_in_chrome')}}";
        }
        </script>
{% endblock %}
